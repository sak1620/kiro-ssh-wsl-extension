{
  "name": "kiro-ssh-wsl-extension",
  "displayName": "SSH & WSL Remote Development",
  "description": "Complete SSH and WSL integration for Kiro IDE - Connect to remote servers and WSL distributions seamlessly",
  "version": "0.0.1",
  "author": "sak1620",
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sak1620/kiro-ssh-wsl-extension"
  },
  "bugs": {
    "url": "https://github.com/sak1620/kiro-ssh-wsl-extension/issues"
  },
  "homepage": "https://github.com/sak1620/kiro-ssh-wsl-extension#readme",
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "start": "node out/extension.js",
    "install-kiro": "npm run build && node kiro-integration/install.js install",
    "uninstall-kiro": "node kiro-integration/install.js uninstall",
    "install-remote-destination": "npm run build && node remote-destination/install-remote-destination.js",
    "package-extension": "npm run build && node marketplace/publish-simple.js",
    "prepare-release": "npm run build && npm run package-extension"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@types/node": "^18.0.0",
    "@types/ssh2": "^1.15.5",
    "@types/ssh2-sftp-client": "^9.0.5",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "ssh2": "^1.11.0",
    "ssh2-sftp-client": "^9.1.0"
  }
}
